<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8BDBD"
    tools:context=".otp.Otp">

    <!--Edittext for getting users phone number-->

    <!--Button for getting OTP-->

    <!--Edittext for getting otp from user-->

    <!--button for verifying user OTP-->

    <EditText
        android:id="@+id/idEdtPhoneNumber"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idBtnGetOtp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your phone"
        android:importantForAutofill="no"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="#6F000000" />

    <Button
        android:id="@+id/idBtnGetOtp"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_above="@+id/idEdtOtp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="32dp"
        android:text="Get OTP"
        android:ems="10"
        android:textAllCaps="false"
        android:backgroundTint="#BD3535"/>

    <EditText
        android:id="@+id/idEdtOtp"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idBtnVerify"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="6dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter OTP"
        android:importantForAutofill="no"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="#6F000000" />

    <Button
        android:id="@+id/idBtnVerify"
        android:layout_width="175dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="285dp"
        android:ems="10"
        android:text="Verify OTP"
        android:textAllCaps="false"
        android:backgroundTint="#BD3535"/>

</RelativeLayout>