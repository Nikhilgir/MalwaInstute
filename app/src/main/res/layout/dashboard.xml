<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lists.DashboardFragment">

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="209dp"
        android:layout_height="80dp"
        android:layout_above="@+id/dash_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/teacher" />

    <TextView
        android:id="@+id/dash_name"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_above="@+id/dash_roll"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="-7dp"
        android:gravity="center"
        android:text="wait..."
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/dash_roll"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_above="@+id/dash_dep"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="-11dp"
        android:gravity="center"
        android:text="wait..."
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dash_dep"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_above="@+id/dash_phone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="-10dp"
        android:gravity="center"
        android:text="wait..."
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dash_phone"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="119dp"
        android:gravity="center"
        android:text="wait..."
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>